{
    "name": "littoral-templates-packages",
    "version": "0.5.0-dev",
    "description": "A small JavaScript/TypeScript framework to do templating comfortably using the template literal syntax in either JavaScript or TypeScript",
    "license": "MIT",
    "author": "Meinte Boersma",
    "keywords": [
        "template",
        "engine"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dslmeinte/littoral-templates.git"
    },
    "bugs": {
        "url": "https://github.com/dslmeinte/littoral-templates/issues"
    },
    "homepage": "https://github.com/dslmeinte/littoral-templates#readme",
    "scripts": {
        "clean": "npm run clean -w packages --if-present",
        "build": "npm run build -w packages --if-present",
        "test": "npm test -w packages --if-present",
        "lint": "npm run lint -w packages --if-present",
        "release-alpha": "npm run release-alpha -w packages --if-present",
        "release-beta": "npm run release-beta -w packages --if-present",
        "release": "npm run release -w packages --if-present"
    },
    "private": true,
    "workspaces": [
        "./packages/littoral-templates",
        "./packages/littoral-templates-node",
        "./packages/littoral-templates-test"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "typescript": "5.3.3"
    }
}
