  "bugs": {
    "url": "https://github.com/dslmeinte/littoral-templates/issues"
  },
  "homepage": "https://github.com/dslmeinte/littoral-templates#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^14.18.33",
    "chai": "^4.3.7",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.8.4"
  }
}
